<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=\, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </head>
  <link rel="stylesheet" href="./css/product.css" />
  <style>
    p{
        font-weight: bold;
        text-align: left;
        text-transform: uppercase;
    }
  </style>
  <body>
    {{>navBar}}
    <h1>Welcome Rishabh</h1>
    <div style="display:flex;">
      {{#each products as |product|}}

        <div
          class="card"
          style="width: 18rem; margin:10px"
          class="product-card"
        >
          <img src="{{product.image}}" class="card-img-top"/>
          <div class="card-body">
            <h5 class="card-title">{{product.name}}</h5>
            <p class="card-text"><p>Description:</p> {{product.description}}</p>
            <p class="card-text"><p>Price:</p> {{product.price}}$</p>
            <p class="card-text"><p>Quantity:</p> {{product.quantity}}</p>
            <p class="card-text"><p>Model Number:</p> {{product.modelNumber}}</p>

            <a href="#" class="btn btn-primary">ADD TO CART</a><br><br>
            <a href="#" class="btn btn-primary">EDIT PRODUCT</a><br><br>
            <a href="#" class="btn btn-primary">DELETE PRODUCT</a>

          </div>
        </div>

      {{/each}}
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
  </body>
</html>